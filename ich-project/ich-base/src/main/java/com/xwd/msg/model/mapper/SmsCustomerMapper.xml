<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<!-- 顾客通知表 -->
<mapper namespace="SmsCustomer">
	
	<resultMap id="smsCustomerResult" type="SmsCustomer">
        <result property="id" column="ID"/>
        <result property="customerNo" column="CUSTOMER_NO"/>
        <result property="customerName" column="CUSTOMER_NAME"/>
        <result property="mobile" column="MOBILE"/>
        <result property="smsTemplateId" column="SMS_TEMPLATE_ID"/>
        <result property="areaPlatMark" column="AREA_PLAT_MARK"/>
        <result property="nanoTime" column="NANO_TIME"/>
        <result property="createTime" column="CREATE_TIME"/>
        <result property="status" column="STATUS"/>
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	ID,
        	CUSTOMER_NO,
        	CUSTOMER_NAME,
        	MOBILE,
        	SMS_TEMPLATE_ID,
        	AREA_PLAT_MARK,
        	NANO_TIME,
        	CREATE_TIME,
        	STATUS
	    ]]>
	</sql>
	
	<sql id="commonAliasColumns">
	    <![CDATA[
        	x.ID,
        	x.CUSTOMER_NO,
        	x.CUSTOMER_NAME,
        	x.MOBILE,
        	x.SMS_TEMPLATE_ID,
        	x.AREA_PLAT_MARK,
        	x.NANO_TIME,
        	x.CREATE_TIME,
        	x.STATUS
	    ]]>
	</sql>

	<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
	<insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="SmsCustomer">
    <![CDATA[
        INSERT INTO sms_customer (
        	ID,
        	CUSTOMER_NO,
        	CUSTOMER_NAME,
        	MOBILE,
        	SMS_TEMPLATE_ID,
        	AREA_PLAT_MARK,
        	NANO_TIME,
        	CREATE_TIME,
        	STATUS
        ) VALUES (
        	#{id},
        	#{customerNo},
        	#{customerName},
        	#{mobile},
        	#{smsTemplateId},
        	#{areaPlatMark},
        	#{nanoTime},
        	#{createTime},
        	#{status}
        )
    ]]>
	</insert>
    
	<update id="update" parameterType="SmsCustomer">
    <![CDATA[
        UPDATE sms_customer SET
	        CUSTOMER_NO = #{customerNo},
	        CUSTOMER_NAME = #{customerName},
	        MOBILE = #{mobile},
	        SMS_TEMPLATE_ID = #{smsTemplateId},
	        AREA_PLAT_MARK = #{areaPlatMark},
	        NANO_TIME = #{nanoTime},
	        CREATE_TIME = #{createTime},
	        STATUS = #{status}
        WHERE 
	        ID = #{id}
    ]]>
	</update>
	
	<delete id="delete" parameterType="map">
    <![CDATA[
        delete from sms_customer
    ]]>
		<include refid="dynamicWhere"/>
    </delete>
    
    <delete id="batchDelete" parameterType="list">
        delete from sms_customer where ID IN 
        <foreach collection="list" item="ids"  open="(" separator="," close=")">   
#{ids}        </foreach> 
    </delete>
    
    <delete id="batchDeleteByLocalId" parameterType="list">
        delete from sms_customer where LOCAL_ID in
        <foreach collection="list" item="ids"  open="(" separator="," close=")">   
#{ids}		</foreach> 
    </delete>
    
    <select id="getById" resultMap="smsCustomerResult">
		SELECT <include refid="commonColumns" />
	    <![CDATA[
		    FROM sms_customer 
	        WHERE 
		        ID = #{id}
	    ]]>
	</select>
	
	<select id="getByIds" resultMap="smsCustomerResult">
		SELECT <include refid="commonColumns" />
		FROM sms_customer WHERE ID IN 
		<foreach collection="list" item="ids"  open="(" separator="," close=")">   
#{ids}        </foreach>  
	</select>
	
	<sql id="dynamicWhere">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>	      				
	       <if test="@Ognl@isNotEmpty(id)">
				AND ID = #{id}
			</if>
	       <if test="@Ognl@isNotEmpty(customerNo)">
				AND CUSTOMER_NO = #{customerNo}
			</if>
	       <if test="@Ognl@isNotEmpty(customerName)">
				AND CUSTOMER_NAME = #{customerName}
			</if>
	       <if test="@Ognl@isNotEmpty(mobile)">
				AND MOBILE = #{mobile}
			</if>
	       <if test="@Ognl@isNotEmpty(smsTemplateId)">
				AND SMS_TEMPLATE_ID = #{smsTemplateId}
			</if>
	       <if test="@Ognl@isNotEmpty(areaPlatMark)">
				AND AREA_PLAT_MARK = #{areaPlatMark}
			</if>
	       <if test="@Ognl@isNotEmpty(nanoTime)">
				AND NANO_TIME = #{nanoTime}
			</if>
	       <if test="@Ognl@isNotEmpty(createTimeBegin)">
				AND CREATE_TIME >= #{createTimeBegin}
		   </if>
		   <if test="@Ognl@isNotEmpty(createTimeEnd)">
				AND CREATE_TIME &lt;= #{createTimeEnd}
		   </if>
	       <if test="@Ognl@isNotEmpty(status)">
				AND STATUS = #{status}
			</if>
		</where>
	</sql>
		
    <select id="count" resultType="long">
        SELECT count(*) FROM sms_customer 
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 offset,pageSize,lastRows 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="smsCustomerResult">
    	SELECT 
    	<if test="@Ognl@isEmpty(count)">
    		<include refid="commonColumns" />
    	</if>
    	<if test="@Ognl@isNotEmpty(count)">
    		count(*) as id
    	</if>
	    FROM sms_customer 
		<include refid="dynamicWhere"/>
		
		<if test="@Ognl@isNotEmpty(sortColumns)">
			ORDER BY ${sortColumns}
		</if>
    </select>

	
</mapper>

