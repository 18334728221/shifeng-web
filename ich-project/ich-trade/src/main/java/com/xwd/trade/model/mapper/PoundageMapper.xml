<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<!-- 手续费 -->
<mapper namespace="Poundage">
	
	<resultMap id="poundageResult" type="Poundage">
        <result property="id" column="ID"/>
        <result property="customerNo" column="CUSTOMER_NO"/>
        <result property="months" column="MONTHS"/>
        <result property="amount" column="AMOUNT"/>
        <result property="poundage" column="POUNDAGE"/>
        <result property="sellPoundage" column="SELL_POUNDAGE"/>
        <result property="buyPoundage" column="BUY_POUNDAGE"/>
        <result property="status" column="STATUS"/>
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	ID,
        	CUSTOMER_NO,
        	MONTHS,
        	AMOUNT,
        	POUNDAGE,
        	SELL_POUNDAGE,
        	BUY_POUNDAGE,
        	STATUS
	    ]]>
	</sql>
	
	<sql id="commonAliasColumns">
	    <![CDATA[
        	x.ID,
        	x.CUSTOMER_NO,
        	x.MONTHS,
        	x.AMOUNT,
        	x.POUNDAGE,
        	x.SELL_POUNDAGE,
        	x.BUY_POUNDAGE,
        	x.STATUS
	    ]]>
	</sql>

	<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
	<insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="Poundage">
    <![CDATA[
        INSERT INTO poundage (
        	ID,
        	CUSTOMER_NO,
        	MONTHS,
        	AMOUNT,
        	POUNDAGE,
        	SELL_POUNDAGE,
        	BUY_POUNDAGE,
        	STATUS
        ) VALUES (
        	#{id},
        	#{customerNo},
        	#{months},
        	#{amount},
        	#{poundage},
        	#{sellPoundage},
        	#{buyPoundage},
        	#{status}
        )
    ]]>
	</insert>
    
	<update id="update" parameterType="Poundage">
    <![CDATA[
        UPDATE poundage SET
	        CUSTOMER_NO = #{customerNo},
	        MONTHS = #{months},
	        AMOUNT = #{amount},
	        POUNDAGE = #{poundage},
	        SELL_POUNDAGE = #{sellPoundage},
	        BUY_POUNDAGE = #{buyPoundage},
	        STATUS = #{status}
        WHERE 
	        ID = #{id}
    ]]>
	</update>
	
	<delete id="delete" parameterType="map">
    <![CDATA[
        delete from poundage
    ]]>
		<include refid="dynamicWhere"/>
    </delete>
    
    <delete id="batchDelete" parameterType="list">
        delete from poundage where ID IN 
        <foreach collection="list" item="ids"  open="(" separator="," close=")">   
#{ids}        </foreach> 
    </delete>
    
    <delete id="batchDeleteByLocalId" parameterType="list">
        delete from poundage where LOCAL_ID in
        <foreach collection="list" item="ids"  open="(" separator="," close=")">   
#{ids}		</foreach> 
    </delete>
    
    <select id="getById" resultMap="poundageResult">
		SELECT <include refid="commonColumns" />
	    <![CDATA[
		    FROM poundage 
	        WHERE 
		        ID = #{id}
	    ]]>
	</select>
	
	<select id="getByIds" resultMap="poundageResult">
		SELECT <include refid="commonColumns" />
		FROM poundage WHERE ID IN 
		<foreach collection="list" item="ids"  open="(" separator="," close=")">   
#{ids}        </foreach>  
	</select>
	
	<sql id="dynamicWhere">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>	      				
	       <if test="@Ognl@isNotEmpty(id)">
				AND ID = #{id}
			</if>
	       <if test="@Ognl@isNotEmpty(customerNo)">
				AND CUSTOMER_NO = #{customerNo}
			</if>
	       <if test="@Ognl@isNotEmpty(months)">
				AND MONTHS = #{months}
			</if>
	       <if test="@Ognl@isNotEmpty(amount)">
				AND AMOUNT = #{amount}
			</if>
	       <if test="@Ognl@isNotEmpty(poundage)">
				AND POUNDAGE = #{poundage}
			</if>
	       <if test="@Ognl@isNotEmpty(sellPoundage)">
				AND SELL_POUNDAGE = #{sellPoundage}
			</if>
	       <if test="@Ognl@isNotEmpty(buyPoundage)">
				AND BUY_POUNDAGE = #{buyPoundage}
			</if>
	       <if test="@Ognl@isNotEmpty(status)">
				AND STATUS = #{status}
			</if>
		</where>
	</sql>
		
    <select id="count" resultType="long">
        SELECT count(*) FROM poundage 
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 offset,pageSize,lastRows 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="poundageResult">
    	SELECT 
    	<if test="@Ognl@isEmpty(count)">
    		<include refid="commonColumns" />
    	</if>
    	<if test="@Ognl@isNotEmpty(count)">
    		count(*) as id
    	</if>
	    FROM poundage 
		<include refid="dynamicWhere"/>
		
		<if test="@Ognl@isNotEmpty(sortColumns)">
			ORDER BY ${sortColumns}
		</if>
    </select>

	
</mapper>

